@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuários";
}

<br/>

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close"></button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close"></button>
        <h4 class="alert-heading">Warning!</h4>
        @TempData["MensagemErro"]
    </div>
}



<div class="text-center">
    <br/>
    <div class="d-grid gap-2 d-md flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Usuario" asp-action="Criar">
            Adicionar Novo Usuário
        </a>
    </div>
    <h1>Listagem de usuários</h1>
    <br />
    <table class="table table-dark" id="table-usuarios">
        <thead>
            <tr class="table-primary">                
                <th>Nome</th>
                <th>Login</th>
                <th>Perfil</th>
                <th>Email</th>
                <th>Data de cadastro</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(UsuarioModel usuario in Model)
                {
                    <tr class="table-dark">                       
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Perfil</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-primary" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                                <a class="btn btn-outline-warning" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@model AlunoModel
@{
    ViewData["Title"] = "Criar aluno";
}

<div class="text-center">
    <br />
    
    <h1>Cadastro de Alunos</h1>
    <br />    
</div>

<form asp-controller="Aluno" asp-action="Criar" method="post">
    <fieldset>        
        <div class="form-group">
            <label for="matricula">Matrícula</label>
            <input type="text" asp-for="Matricula" class="form-control" placeholder="Digite a Matrícula">  
            @Html.ValidationMessageFor(x => x.Matricula)
        </div>     
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group">
            <label for="curso">Curso</label>
            <input type="text" asp-for="Curso" class="form-control" placeholder="Digite o Curso">
            @Html.ValidationMessageFor(x => x.Curso)
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>
        <br/>
        <button type="submit" class="btn btn-outline-success">Adicionar</button>
        <a class="btn btn-outline-secondary" asp-controller="Aluno" asp-action="Index" role="button">voltar</a>
    </fieldset>
</form>


